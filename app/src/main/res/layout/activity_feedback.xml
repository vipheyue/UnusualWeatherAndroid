<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:context=".FeedbackActivity" android:id="@+id/linearLayout">
	<EditText android:layout_width="0dp" android:layout_height="0dp" android:hint="请输入反馈意见"
	          android:id="@+id/editText" app:layout_constraintEnd_toEndOf="parent"
	          app:layout_constraintBottom_toTopOf="@+id/materialButton" app:layout_constraintTop_toTopOf="parent"
	          app:layout_constraintStart_toStartOf="parent"/>
	<Button android:layout_width="0dp"
	        android:text="发送反馈"
	        android:layout_height="wrap_content"
	        android:id="@+id/materialButton"

	        app:layout_constraintTop_toBottomOf="@+id/editText"
	        android:layout_marginBottom="263dp"
	        app:layout_constraintEnd_toEndOf="parent"
	        app:layout_constraintStart_toStartOf="parent"
	        app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>